<div>
  <h4 className="text-md font-semibold text-gray-800 mb-4">{{ title }}</h4>
  <div className="grid grid-cols-5 gap-1 h-64">
    {Array.from({ length: 25 }, (_, i) => (
      <div
        key={i}
        className="bg-blue-100 hover:bg-blue-200 transition-colors duration-200 rounded flex items-center justify-center text-xs"
        style={{
          backgroundColor: `hsl(200, 70%, ${60 + (i % 5) * 8}%)`
        }}
      >
        {i + 1}
      </div>
    ))}
  </div>
  <div className="text-xs text-gray-500 mt-2">
    Heatmap showing {{ y }} distribution across {{ x }}
  </div>
</div>
